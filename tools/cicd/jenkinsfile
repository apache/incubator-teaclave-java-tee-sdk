pipeline {
         agent {
             node {
                 label 'javaenclave_ci_server'
                 customWorkspace '/home/ci/jenkins/javaenclave'
             }
         }
         stages {
                 stage('Test and Build JavaEnclave SDK') {
                 steps {
                     echo 'Build JavaEnclave SDK:'
                     sh "./tools/cicd/make.sh"
                 }
                 post {
                     success {
                         jacoco (
                             execPattern: 'sdk/**/target/jacoco.exec',
                             classPattern: 'sdk/**/target/classes',
                             sourcePattern: 'sdk/**/src/main/java',
                             sourceInclusionPattern: 'com/alibaba/confidentialcomputing/**/*.java,com/alibaba/confidentialcomputing/**/**/*.java',
                          )
                     }
                 }
                 }
         }
}